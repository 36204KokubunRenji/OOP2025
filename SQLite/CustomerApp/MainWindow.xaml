<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="500" Width="1000">
    <Grid>
        <StackPanel  Margin="30">
            <TextBlock Text="名前" HorizontalAlignment="Left"/>
            <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="20" Width="400"/>
            <TextBlock Text="電話番号" />
            <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Height="20" Width="400"/>
            <TextBlock Text="住所"/>
            <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Height="20" Width="400"/>
            <Button Content="新規登録" x:Name="SaveButton" Click="SaveButton_Click" Margin="0,10,0,5" Height="50" Width="50" HorizontalAlignment="Left"/>
            <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="0,5,0,5" Height="50" Width="50" HorizontalAlignment="Left"/>
            <Button Content="削除" x:Name="deleteButton" Click="deleteButton_Click" Margin="0,5,0,5" Height="50" Width="50" HorizontalAlignment="Left"/>
            <ListView x:Name="CustomerListView" Margin="0,5,0,0" Height="600">
                
            </ListView>
            <TextBox
        Height="20" x:Name="NameTextBox" Width="400"/>
        </StackPanel>
    </Grid>
</Window>
