<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="500" Width="400"
        Background="#FFF4F4F4">
    <Grid>
        <!-- 今日の天気カード -->
        <Border Name="TodayWeatherCard"
                Background="White"
                CornerRadius="15"
                Padding="20"
                Width="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="10">
            <StackPanel>
                <TextBlock Name="WeatherResult"
                           Text="ここに今日の天気が表示されます"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Foreground="#333"
                           Margin="0,0,0,10"/>

                <!-- 今日の天気アイコン、降水確率、気温 -->
                <TextBlock Name="WeatherIcon"
                           Text="☀"
                           FontSize="36"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                <TextBlock Name="Temp"
                           Text="最高気温: 25℃ / 最低気温: 15℃"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                <TextBlock Name="Precipitation"
                           Text="降水確率: 20%"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,5"/>
                <Button Name="GetWetherButton"
                        Content="天気予報"
                        Width="100"
                        Height="30"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 週間天気予報カード -->
        <Border Name="WeekWeatherCard"
                Background="White"
                CornerRadius="15"
                Padding="20"
                Width="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="10, 0, 10, 20">
            <StackPanel>
                <TextBlock Text="一週間予報"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0, 0, 0, 10"/>
                <ListBox Name="WeekWeatherList"
                         Background="White"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding Icon}" FontSize="20" Margin="5"/>
                                <TextBlock Text="{Binding Date}" Width="120" Margin="5"/>
                                <TextBlock Text="{Binding TempMin}" Margin="5"/>
                                <TextBlock Text="{Binding TempMax}" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 読み込み中のプログレスバー -->
        <ProgressBar Name="LoadingProgress"
                     Height="10"
                     Margin="0,0,0,10"
                     IsIndeterminate="True"
                     Visibility="Collapsed"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
    </Grid>
</Window>
