<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="450" Width="400"
        Background="#FFF4F4F4">
    <Grid>
        <!-- 天気カード -->
        <Border Name="WeatherCard"
                Background="White"
                CornerRadius="15"
                Padding="20"
                Width="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Gray"
                                  Direction="320"
                                  ShadowDepth="5"
                                  Opacity="0.5"
                                  BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>
                <!-- 読み込み中バー -->
                <ProgressBar Name="LoadingProgress"
                             Height="10"
                             Margin="0,0,0,10"
                             IsIndeterminate="True"
                             Visibility="Collapsed"/>

                <!-- 天気表示 -->
                <TextBlock Name="WeatherResult"
                           Text="ここに天気が表示されます"
                           TextWrapping="Wrap"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Foreground="#333"/>

                <!-- 気温 -->
                <TextBlock Name="Temperature"
                           Text=""
                           FontSize="14"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"/>

                <!-- 降水確率 -->
                <TextBlock Name="Precipitation"
                           Text=""
                           FontSize="14"
                           Margin="0,2,0,0"
                           HorizontalAlignment="Center"/>

                <!-- 湿度 -->
                <TextBlock Name="Humidity"
                           Text=""
                           FontSize="14"
                           Margin="0,2,0,0"
                           HorizontalAlignment="Center"/>

                <!-- 天気取得ボタン -->
                <Button Name="GetWeatherButton"
                        Content="現在地の天気を取得"
                        Width="200" Height="40"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="GetWeatherButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
